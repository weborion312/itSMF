<% content_for :content do %>
<section id="content">
  <section class="vbox">
	  <%= render 'admin/shared/header'%>
	  <section class="scrollable wrapper">
          <section class="panel">
            <header class="panel-heading font-bold">
              <%= @title %> Form
            </header>
            <div class="panel-body">
              <%= form_for(@user, :as => :user, :html => {:class => "form-horizontal"}, :url => admin_users_path) do |f| %>
		   <div class="form-group">
                <label class="col-sm-2 control-label">First Name</label>
                <div class="col-sm-10">
			   <%= f.text_field :first_name, :class => "form-control"%>
                </div>
              </div>
		   <div class="line line-dashed line-lg pull-in"></div>
		   
		   <div class="form-group">
                <label class="col-sm-2 control-label">Last Name</label>
                <div class="col-sm-10">
			   <%= f.text_field :last_name, :class => "form-control"%>
                </div>
              </div>
		   <div class="line line-dashed line-lg pull-in"></div>
		   
           <div class="form-group">
             <label class="col-sm-2 control-label">Birth Date</label>
             <div class="col-sm-10">
			   <%= f.text_field :birthdate, :class => "input-sm input-s datepicker-input form-control", "data-date-format" => "dd-mm-yyyy"%>
             </div>
           </div>
		   <div class="line line-dashed line-lg pull-in"></div>
		   
		   <div class="form-group">
                <label class="col-sm-2 control-label">Position</label>
                <div class="col-sm-10">
			   <%= f.text_field :position, :class => "form-control"%>
                </div>
              </div>
		   <div class="line line-dashed line-lg pull-in"></div>
		   
			   <div class="form-group">
                 <label class="col-sm-2 control-label">Email</label>
                 <div class="col-sm-10">
				   <%= f.email_field :email, :class => "form-control"%>
                 </div>
               </div>
			   <div class="line line-dashed line-lg pull-in"></div>
			   
               <div class="form-group">
                 <label class="col-sm-2 control-label">Password</label>
                 <div class="col-sm-10">
				   <%= f.password_field :password, :autocomplete => "off" , :class => "form-control"%>
                 </div>
               </div>
               <div class="line line-dashed line-lg pull-in"></div>
			   
               <div class="form-group">
                 <label class="col-sm-2 control-label">Password Confirmation</label>
                 <div class="col-sm-10">
				   <%= f.password_field :password_confirmation, :class => "form-control"%>
                 </div>
               </div>
               <div class="line line-dashed line-lg pull-in"></div>
			   
               <div class="form-group">
                 <label class="col-sm-2 control-label">Upload Icon</label>
                 <div class="col-sm-10">
				   <%= f.file_field :cover, :class => "form-control"%>
                 </div>
               </div>
			   <div class="line line-dashed line-lg pull-in"></div>
               
               <div class="form-group">
                 <label class="col-sm-2 control-label">Role</label>
                 <div class="col-sm-10">
					 <div class="m-b">
                    <%= f.select(:role_id, {"Admin" => 0, "Senior Staff" => 1, "Staff" => 2}, {}, {:class => 'select2-option', :style => 'width:250px'})%>
					</div>
                 </div>
               </div>
               <div class="line line-dashed line-lg pull-in"></div>

                <div class="form-group">
                  <div class="col-sm-4 col-sm-offset-2">
                    <a href="/admin/users" class="btn btn-white">Cancel</a>
                    <button type="submit" class="btn btn-primary">Save changes</button>
                  </div>
                </div>
				<% end %>
            </div>
          </section>
	  </section>
  </section>
</section>
<% end %>

<% content_for :extra_stylesheets do %>
<%= stylesheet_link_tag "admin/select2/select2.css" %>
<%= stylesheet_link_tag "admin/fuelux/fuelux.css" %>
<%= stylesheet_link_tag "admin/datepicker/datepicker.css" %>

<% end %>

<% content_for :extra_javascripts do %>
<!-- fuelux -->
<%= javascript_include_tag "admin/fuelux/fuelux.js"%>
<!-- datepicker -->
<%= javascript_include_tag "admin/datepicker/bootstrap-datepicker.js"%>
<!-- slider -->
<%= javascript_include_tag "admin/slider/bootstrap-slider.js"%>
<!-- file input -->  
<%= javascript_include_tag "admin/file-input/bootstrap.file-input.js"%>
<!-- combodate -->
<%= javascript_include_tag "admin/libs/moment.min.js"%>
<%= javascript_include_tag "admin/combodate/combodate.js" %>
<!-- parsley -->
<%= javascript_include_tag "admin/parsley/parsley.min.js" %>
<%= javascript_include_tag "admin/parsley/parsley.extend.js" %>
<!-- select2 -->
<%= javascript_include_tag "admin/select2/select2.min.js" %>
<!-- wysiwyg -->
<%= javascript_include_tag "admin/wysiwyg/jquery.hotkeys.js" %>
<%= javascript_include_tag "admin/wysiwyg/bootstrap-wysiwyg.js" %>
<%= javascript_include_tag "admin/wysiwyg/demo.js" %>
<% end %>