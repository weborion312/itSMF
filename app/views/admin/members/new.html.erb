<!-- wysiwyg -->
<%= javascript_include_tag "admin/wysiwyg/jquery.hotkeys.js" %>
<%= javascript_include_tag "admin/wysiwyg/bootstrap-wysiwyg.js" %>
<%= javascript_include_tag "admin/wysiwyg/demo.js" %>
