<% content_for :content do %>
<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>
  <%= devise_error_messages! %>
		   <div class="grid_6">
                <label class="col-sm-2 control-label">Company Name</label>
                
			   <%= f.text_field :company_name, :class => 'radius fright'%>
                
              </div>
			  <br class="clear"/>
		   
		   <div class="grid_6">
                <label class="col-sm-2 control-label">First Name(English)</label>
                
			   <%= f.text_field :first_name, :class => 'radius fright'%>
                
              </div>
			  
		   <div class="grid_6">
                <label class="col-sm-2 control-label">Last Name(English)</label>
			   <%= f.text_field :last_name, :class => 'radius fright'%>
              
              </div>
			  <br class="clear"/>
			  
           <div class="grid_6">
             <label class="col-sm-2 control-label">Applicant's Name(Chinese)</label>
             
			   <%= f.text_field :name, :class => 'radius fright'%>
             </div>
		   
			   <div class="grid_6">
                 <label class="col-sm-2 control-label">Email</label>
                 
				   <%= f.email_field :email, :class => 'radius fright'%>
              
               </div>
			   <br class="clear"/>
			   
			   <div class="grid_16">
	                <label class="col-sm-2 control-label">Address</label>
	                
				   <%= f.text_area :address, :class => 'radius fright'%>
	                </div>
	           <br class="clear"/>
			   <div class="grid_6">
	                <label class="col-sm-2 control-label">Telephone(Mobile)</label>
	                
				   <%= f.text_field :mobile_tel, :class => 'radius fright'%>
	                </div>
	             
			   <div class="grid_6">
	                <label class="col-sm-2 control-label">Telephone(Office)</label>
	                
				   <%= f.text_field :office_tel, :class => 'radius fright'%>
	               
	              </div>
			   
			   <div class="grid_4">
	                <label class="col-sm-2 control-label">Fax</label>
	               <%= f.text_field :fax, :class => 'radius fright'%>
	                </div>
	           
			   <br class="clear"/>
			   
               <div class="grid_16">
                 <label class="col-sm-2 control-label">Type of Members</label>
                 <div class="col-sm-10">
					 <div class="grid_4">   
                  	   <div class="radio">
                     	  <label><%= f.radio_button :member_location, 0 %>
                       	itSMF HK Chapter Member
                     	</label>
                   		</div>
						<br />
						<br />

						<div class="radio">
                     	   <label>
		  			   		<%= f.radio_button :member_location, 1 %>
                      	  Global Member of itSMF
                     	</label>
                  	 	</div>
					</div>
                   <div class="grid_4">   
					<div class="radio">
						<label>
							<%= f.radio_button :member_type, 0 %>Individual
                    	</label>
                 	</div>
					<div class="radio">
						<label>
							<%= f.radio_button :member_type, 1 %>Corporate
                    	</label>
                 	</div>
				   </div>

                   <div class="grid_4">  
					   <label>Member Number</label>
   				   		 <%= f.text_field :member_number, :class => 'radius fleft'%>
   	                	
				   </div>
                 </div>
               </div>
	           
			   <br class="clear"/>
               
  			    <div class="grid_6"><%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
  			   <%= f.password_field :current_password, :class => 'radius fright'%></div>
	           
			   <br class="clear"/>
			   
               <div class="grid_6">
                 <label class="col-sm-2 control-label">Password <i>(leave blank if you don't want to change it)</i></label>
                  <%= f.password_field :password, :autocomplete => "off" , :class => 'radius fright'%>
                 </div>
               
               <div class="grid_6">
                 <label class="col-sm-2 control-label">Password Confirmation</label>
                 <%= f.password_field :password_confirmation, :class => 'radius fright'%>
                 </div>
				 
  			    
			 
	           
			   <br class="clear"/>
 


  <div><%= f.submit "Update" %></div>
<% end %>

<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete %></p>

<%= link_to "Back", :back %>
<% end %>